<mvc:View
    controllerName="zemployeemgmt.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:filterbar="sap.ui.comp.filterbar"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <filterbar:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad"
            >
                <filterbar:filterGroupItems>
                    <filterbar:FilterGroupItem
                        name="SAP Module"
                        label="SAP Module"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <filterbar:control>
                            <ComboBox
                                items="{Employee>/ModuleItems}"
                                placeholder="Select SAP Module"
                                id="cbLicenseId"
                                selectionChange="onProjectChange"
                            >
                                <core:Item
                                    key="{Employee>MODULE_ID}"
                                    text="{Employee>MODULE_NAME}"
                                />
                            </ComboBox>
                        </filterbar:control>
                    </filterbar:FilterGroupItem>
                </filterbar:filterGroupItems>
            </filterbar:FilterBar>

            <Table id="projectTable" class="sapUiResponsiveContentPadding" items="{Employee>/Employee}" growing="true"
		growingThreshold="50"  selectionChange="onSelectionChange" updateFinished="onUpdateFinished">
		<headerToolbar>
			<OverflowToolbar>
				<!-- <Title text="{i18n>countTitle} ({EmployeeLicenseAdmin>/iCount})"/> -->
				<ToolbarSpacer/>
				<Button text="Delete" icon="sap-icon://delete" type="Emphasized" press="onDelete"/>
				<Button text="Create" icon="sap-icon://add" type="Emphasized" press="onCreate"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Employee ID"/>
			</Column>
			<Column>
				<Text text="Employee Name"/>
			</Column>
			<Column>
				<Text text="Employee Salary"/>
			</Column>
			<Column>
				<Text text="Employee CTC"/>
			</Column>
            <Column>
				<Text text="Employee Experience"/>
			</Column>
            <Column>
				<Text text="Employee Module"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Employee>EMP_ID}"/>
					<Text text="{Employee>EMP_NAME}"/>
					<Text text="{Employee>EMP_SALARY}"/>
                    <Text text="{Employee>EMP_CTC}"/>
                    <Text text="{Employee>EMP_EXPERIENCE}"/>
                    <Text text="{Employee>EMP_MODULE_MODULE_ID}"/>
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
        </content>
    </Page>
</mvc:View>
